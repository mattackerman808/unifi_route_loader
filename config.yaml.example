# UniFi Route Loader Configuration File
# Copyright (c) 2026 UniFi Static Route Manager Contributors
# All command line options can be specified here
# Command line options will override config file values

# Required Settings
file: networks.txt
route_name: VPN Route

# Gateway Configuration (choose ONE):
# Option 1: Nexthop IP address
nexthop: 192.168.1.254

# Option 2: WAN interface (comment out nexthop if using this)
# wan_interface: wan2

# Controller Connection
host: 192.168.1.1
port: 443
site: default

# Authentication (choose ONE):

# Option 1: API Key (RECOMMENDED for automation)
# Generate: Settings > Admins & Users > API
# api_key: your_api_key_here

# Option 2: Encrypted Password (RECOMMENDED for scripts)
# Generate: python encrypt_password.py
username: admin
# password_encrypted: gAAAAABm...encrypted_string...

# Option 3: Plain Text Password (NOT RECOMMENDED - testing only)
# password: mypassword

# Route Settings
distance: 1

# Optional Features
list_only: false
debug: false

# Route Removal (USE WITH CAUTION)
# Dry-run mode (preview only)
remove_unused: false
# Actually remove routes (DANGEROUS)
remove_unused_confirm: false
# Safety filter - only remove routes matching this text
route_name_filter: VPN Route
