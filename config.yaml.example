# UniFi Route Loader Configuration File Example
# All command line options can be specified here
# Command line options will override config file values

# Required: Path to file containing networks in CIDR notation
file: networks.txt

# Required: Base name for routes (numbers will be appended)
route_name: VPN Route

# Gateway Configuration (choose ONE of the following):
# Option 1: Use nexthop IP address
nexthop: 192.168.1.254

# Option 2: Use WAN interface (comment out nexthop if using this)
# wan_interface: wan2

# UniFi Controller Connection Settings
host: 192.168.1.1
port: 443
site: default

# Authentication Configuration (choose ONE of the following):
# Option 1: Username/Password Authentication
username: admin
# Password Configuration (choose ONE):
# Option 1a: Plain text password (NOT RECOMMENDED for security)
# password: mypassword
# Option 1b: Encrypted password (RECOMMENDED)
# Generate using: python encrypt_password.py
# password_encrypted: gAAAAABm...encrypted_string_here...

# Option 2: API Key Authentication (RECOMMENDED)
# Generate via UniFi controller UI: Settings > Admins & Users > API
# api_key: [Your API Key here]

# Route Configuration
distance: 1

# Optional Flags
list_only: false
debug: false

# Route Removal Options (NEW)
# Remove static routes not defined in the networks file
remove_unused: false
# Actually remove routes (disables dry-run mode) - USE WITH CAUTION!
remove_unused_confirm: false
# Only consider routes for removal that contain this text in their name
# This is a safety feature to prevent accidental removal of unrelated routes
route_name_filter: VPN Route
